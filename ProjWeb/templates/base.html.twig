<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            <link rel="stylesheet" href="{{ asset('css/menu.css') }}"
        {% endblock %}


    </head>
    <body>
    {% block nav %}

        <nav class="navbar sticky-top navbar-expand-lg navbar-dark " style="background-color: #3CB371FF;">
            <div class="container-fluid navbar-nav">
                <span class="navbar-brand mb-0 h1">Steam</span>
                <a class="nav-link" aria-current="page" href="{{ path('home') }}">Home</a>
                <a class="nav-link" href="{{ path('gamesList') }}">Games</a>
                <a class="nav-link disabled" href="{{ path('addGame') }}">Add /!\</a>
                <form class="d-flex">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-light" type="submit">Search</button>
                </form>
            </div>
        </nav>
    {% endblock %}
        {% block body %}
            {% block p %}<p>Hello World ! from base.html.twig</p>{% endblock %}



        {% endblock %}

        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
        {% endblock %}

    </body>
</html>
