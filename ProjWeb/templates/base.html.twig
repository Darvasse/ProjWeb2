<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Steam!{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
    {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('css/menu.css') }}"
    {% endblock %}


</head>
<body>
{% block nav %}

    <nav class="navbar sticky-top navbar-expand-lg navbar-dark pb-2" style="background-color: #3CB371FF;">
        <div class="container-fluid navbar-nav ">
            <span class="navbar-brand mb-0 h1">Steam</span>
            <a class="nav-link" aria-current="page" href="{{ path('home') }}">Home</a>
            <a class="nav-link" href="{{ path('gamesList') }}">Games</a>

            <form class="d-flex">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-light" type="submit">Search</button>
            </form>
            <div class="d-flex">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a class="nav-link btn btn-outline-light me-2" href="{{ path('addGame') }}">ðŸ“¤</a>
                {% endif %}
                <div class="dropdown show">
                    <a class="btn btn-outline-light dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Profile
                    </a>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" href="{{ path('users_show', {'id': app.user.id}) }}">My profile</a>
                            <a class="dropdown-item" href="{{ path('users_edit', {'id': app.user.id}) }}">Modify</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% else %}
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" href="{{ path('app_signup') }}">Sign up</a>
                            <a class="dropdown-item" href="{{ path('app_login') }}">Log in</a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </nav>
{% endblock %}
{% block body %}

{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
{% endblock %}

</body>
</html>
